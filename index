    <!-- آهنگ -->
    <audio id="myAudio" controls>
        <source src="https://uploadkon.ir/uploads/57dd22_24file-4617.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>

    <p>
        <!-- لینک‌ها برای پخش از ثانیه مشخص شده -->
        <a href="#" onclick="playFrom('myAudio', 158); event.preventDefault();">پخش آهنگ از ثانیه ۱۰</a> | 
    </p>

    <script>
        function playFrom(mediaId, seconds) {
            var mediaElement = document.getElementById(mediaId);
            if (mediaElement) {
                mediaElement.currentTime = seconds;
                mediaElement.play();
            } else {
                console.error('Element with id ' + mediaId + ' not found.');
            }
        }
    </script>

</body>
